{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Resume PDF",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent"
			},
			"osx": {
				"command": "eval \"$(/usr/libexec/path_helper)\" && xelatex -interaction=nonstopmode main.tex && open -a Preview main.pdf"
			},
			"linux": {
				"command": "pdflatex -interaction=nonstopmode main.tex && xdg-open main.pdf"
			},
			"windows": {
				"command": "pdflatex -interaction=nonstopmode main.tex"
			}
		}
	]
}